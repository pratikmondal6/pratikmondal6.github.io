      <!-- Right Section - Floating Company Logos -->
      <div class="relative h-96 lg:h-full min-h-[400px] animate-fade-in animation-delay-600">
        <!-- Desktop: Floating Logo Container -->
        <div class="hidden lg:block absolute inset-0 overflow-hidden">
          
          <!-- Porsche Informatik - Bottom Center (Aligned with Fraunhofer) -->
