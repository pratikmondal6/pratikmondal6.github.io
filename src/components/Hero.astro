                  loading="lazy"
                />
                <!-- Active Badge -->
                <div class="absolute -top-2 -right-2 w-5 h-5 rounded-full flex items-center justify-center"
                     style="background-color: #619E7E">
                  <div class="w-2 h-2 bg-white rounded-full"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Greenable GmbH -->
          <div class="floating-logo mobile-logo" style="animation-delay: 0.7s;">
            <div class="group relative cursor-pointer" onclick="scrollToExperience('greenable')">
              <div class="absolute inset-0 rounded-3xl blur-lg opacity-20 group-hover:opacity-35 transition-opacity duration-500"
                   style="background-color: #56863F">
              </div>
              <div class="relative bg-white/70 backdrop-blur-lg rounded-3xl p-6 border shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-110 hover:-translate-y-2"
                   style="border-color: #56863F40; box-shadow: 0 10px 30px rgba(86, 134, 63, 0.15), 0 6px 15px rgba(86, 134, 63, 0.1)">
                <img 
                  src="/logos/greenable-logo.jpg" 
                  alt="Greenable GmbH" 
                  class="h-14 sm:h-16 w-auto object-contain transition-all duration-500"
                  loading="lazy"
                />
              </div>
            </div>
          </div>

          <!-- BRAC IT -->
          <div class="floating-logo mobile-logo" style="animation-delay: 1.4s;">
            <div class="group relative cursor-pointer" onclick="scrollToExperience('brac-it')">
              <div class="absolute inset-0 rounded-3xl blur-lg opacity-20 group-hover:opacity-35 transition-opacity duration-500"
                   style="background-color: #0A2D59">
              </div>
              <div class="relative bg-white/70 backdrop-blur-lg rounded-3xl p-6 border shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-110 hover:-translate-y-2"
                   style="border-color: #0A2D5940; box-shadow: 0 10px 30px rgba(10, 45, 89, 0.15), 0 6px 15px rgba(10, 45, 89, 0.1)">
                <img 
                  src="/logos/brac-it-logo.jpg" 
                  alt="BRAC IT" 
                  class="h-14 sm:h-16 w-auto object-contain transition-all duration-500"
                  loading="lazy"
                />
              </div>
            </div>
          </div>

          <!-- Porsche Informatik -->
          <div class="floating-logo mobile-logo" style="animation-delay: 2.1s;">
            <div class="group relative cursor-pointer" onclick="scrollToExperience('porsche-informatik')">
              <div class="absolute inset-0 rounded-3xl blur-lg opacity-20 group-hover:opacity-35 transition-opacity duration-500 bg-gray-600">
              </div>
              <div class="relative bg-white/70 backdrop-blur-lg rounded-3xl p-5 border border-white/40 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-110 hover:-translate-y-2">
                <img 
                  src="/logos/porsche_informatik_logo.jpg" 
                  alt="Porsche Informatik" 
                  class="h-16 sm:h-18 w-auto object-contain transition-all duration-500"
                  loading="lazy"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Clean Professional Company Stats (Simplified) -->
  <div class="absolute bottom-0 left-0 right-0">
    <div class="relative overflow-hidden">
      <!-- Subtle Background Glow -->
      <div class="absolute inset-0 h-20"
           style={`background: linear-gradient(180deg, transparent 0%, ${siteConfig.accentColor}08 50%, ${siteConfig.accentColor}15 100%)`}>
      </div>
      
      <!-- Elite Stats Dashboard -->
      <div class="relative z-10 px-8 sm:px-12 md:px-24 py-8">
