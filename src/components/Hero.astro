  <style>
    /* No constellation animations needed for clean layout */
  </style>
</div>

<script>
  function scrollToExperience(companyId: string) {
    if (companyId === 'porsche-informatik') {
      // Scroll to achievements section for Porsche
      document.getElementById('achievements')?.scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'
      });
      return;
    }

    // Scroll to experience section for other companies
    document.getElementById('experience')?.scrollIntoView({ 
      behavior: 'smooth',
      block: 'start'
    });

    // Wait for scroll to complete, then highlight the company
    setTimeout(() => {
      // Remove any existing highlights
      document.querySelectorAll('.experience-highlight').forEach(el => {
        el.classList.remove('experience-highlight');
      });

      // Find and highlight the specific company experience card
      const experienceCards = document.querySelectorAll('#experience .bg-white');
      const companyNames: Record<string, string> = {
        'fraunhofer-iee': 'Fraunhofer IEE',
        'greenable': 'Greenable GmbH',
        'brac-it': 'Brac IT',
        'porsche-informatik': 'Porsche Informatik'
      };

      experienceCards.forEach(card => {
        const companyElement = card.querySelector('[style*="color:"]');
        if (companyElement && companyElement.textContent?.trim() === companyNames[companyId]) {
          card.classList.add('experience-highlight');
          
          // Scroll the specific card into view for better positioning
          card.scrollIntoView({ 
            behavior: 'smooth',
            block: 'center'
          });
          
          // Remove highlight after 3 seconds
          setTimeout(() => {
            card.classList.remove('experience-highlight');
          }, 3000);
        }
      });
    }, 800);
  }

  // Make function globally available
  (window as any).scrollToExperience = scrollToExperience;
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }

  .animation-delay-800 {
    animation-delay: 0.8s;
  }

  /* Global styles for experience highlighting */
  :global(.experience-highlight) {
    animation: highlightPulse 0.6s ease-in-out;
    box-shadow: 0 0 0 3px var(--accent-color, #3b82f6), 0 10px 25px rgba(0, 0, 0, 0.15) !important;
    transform: scale(1.02);
    transition: all 0.3s ease;
  }

  @keyframes highlightPulse {
    0% { 
      box-shadow: 0 0 0 0 var(--accent-color, #3b82f6), 0 4px 6px rgba(0, 0, 0, 0.1);
      transform: scale(1);
    }
    50% { 
      box-shadow: 0 0 0 6px var(--accent-color, #3b82f6), 0 15px 30px rgba(0, 0, 0, 0.2);
      transform: scale(1.03);
    }
    100% { 
      box-shadow: 0 0 0 3px var(--accent-color, #3b82f6), 0 10px 25px rgba(0, 0, 0, 0.15);
      transform: scale(1.02);
    }
  }
</style>
