            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    /* Dynamic flying animations - enhanced movement and rotation */
    @keyframes flyingLogoA {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1) rotate(0deg); 
      }
      15% { 
        transform: translateY(-12px) translateX(8px) scale(1.05) rotate(2deg); 
      }
      30% { 
        transform: translateY(-18px) translateX(-6px) scale(0.95) rotate(-1.5deg); 
      }
      45% { 
        transform: translateY(-8px) translateX(12px) scale(1.08) rotate(3deg); 
      }
      60% { 
        transform: translateY(-22px) translateX(-4px) scale(0.92) rotate(-2deg); 
      }
      75% { 
        transform: translateY(-6px) translateX(10px) scale(1.06) rotate(1.8deg); 
      }
    }

    @keyframes flyingLogoB {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1) rotate(0deg); 
      }
      20% { 
        transform: translateY(15px) translateX(-10px) scale(1.08) rotate(-2.5deg); 
      }
      35% { 
        transform: translateY(-8px) translateX(14px) scale(0.96) rotate(1.8deg); 
      }
      50% { 
        transform: translateY(20px) translateX(-7px) scale(1.04) rotate(-3deg); 
      }
      65% { 
        transform: translateY(-15px) translateX(11px) scale(0.94) rotate(2.2deg); 
      }
      80% { 
        transform: translateY(8px) translateX(-12px) scale(1.07) rotate(-1.5deg); 
      }
    }

    @keyframes flyingLogoC {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1) rotate(0deg); 
      }
      25% { 
        transform: translateY(-16px) translateX(-11px) scale(1.09) rotate(2.8deg); 
      }
      40% { 
        transform: translateY(-5px) translateX(9px) scale(0.97) rotate(-1.2deg); 
      }
      55% { 
        transform: translateY(-25px) translateX(-8px) scale(1.06) rotate(3.2deg); 
      }
      70% { 
        transform: translateY(-12px) translateX(13px) scale(0.93) rotate(-2.5deg); 
      }
      85% { 
        transform: translateY(-3px) translateX(-6px) scale(1.04) rotate(1.6deg); 
      }
    }

    @keyframes flyingLogoD {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1) rotate(0deg); 
      }
      12% { 
        transform: translateY(-20px) translateX(7px) scale(1.07) rotate(-2.8deg); 
      }
      28% { 
        transform: translateY(-4px) translateX(-13px) scale(0.95) rotate(2.2deg); 
      }
      44% { 
        transform: translateY(-17px) translateX(15px) scale(1.1) rotate(-1.8deg); 
      }
      60% { 
        transform: translateY(-28px) translateX(-5px) scale(0.91) rotate(3.5deg); 
      }
      76% { 
        transform: translateY(-9px) translateX(11px) scale(1.05) rotate(-2.2deg); 
      }
      88% { 
        transform: translateY(-2px) translateX(-8px) scale(0.98) rotate(1.4deg); 
      }
    }

    @keyframes floatParticleEnhanced {
      0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1) rotate(0deg); 
        opacity: 0.2;
      }
      20% { 
        transform: translateY(-25px) translateX(18px) scale(1.4) rotate(120deg); 
        opacity: 0.6;
      }
      40% { 
        transform: translateY(-12px) translateX(-22px) scale(0.7) rotate(240deg); 
        opacity: 0.4;
      }
      60% { 
        transform: translateY(-35px) translateX(15px) scale(1.2) rotate(360deg); 
        opacity: 0.8;
      }
      80% { 
        transform: translateY(-8px) translateX(-18px) scale(0.9) rotate(480deg); 
        opacity: 0.3;
      }
    }

    .floating-logo {
      animation: flyingLogoA 8s ease-in-out infinite;
      transition: all 0.3s ease;
    }

    .floating-logo:nth-child(2) {
      animation: flyingLogoB 10s ease-in-out infinite;
    }

    .floating-logo:nth-child(3) {
      animation: flyingLogoC 7s ease-in-out infinite;
    }

    .floating-logo:nth-child(4) {
      animation: flyingLogoD 12s ease-in-out infinite;
    }

    .floating-particle {
      animation: floatParticleEnhanced 15s ease-in-out infinite;
    }

    /* Mobile responsive styling */
    .mobile-logo:nth-child(1) { animation: floatConstrainedA 10s ease-in-out infinite; animation-delay: 0s; }
    .mobile-logo:nth-child(2) { animation: floatConstrainedB 12s ease-in-out infinite; animation-delay: 0.7s; }
    .mobile-logo:nth-child(3) { animation: floatConstrainedC 8s ease-in-out infinite; animation-delay: 1.4s; }
    .mobile-logo:nth-child(4) { animation: floatConstrainedD 11s ease-in-out infinite; animation-delay: 2.1s; }
  </style>
</div>

<script>
  function scrollToExperience(companyId: string) {
    if (companyId === 'porsche-informatik') {
      // Scroll to achievements section for Porsche
      document.getElementById('achievements')?.scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'
      });
      return;
    }

    // Scroll to experience section for other companies
    document.getElementById('experience')?.scrollIntoView({ 
      behavior: 'smooth',
      block: 'start'
    });

    // Wait for scroll to complete, then highlight the company
    setTimeout(() => {
      // Remove any existing highlights by resetting styles
      document.querySelectorAll('#experience .bg-white').forEach(el => {
        const htmlEl = el as HTMLElement;
        htmlEl.style.removeProperty('box-shadow');
        htmlEl.style.removeProperty('border-color');
        htmlEl.style.removeProperty('transform');
        htmlEl.style.removeProperty('transition');
      });

      // Find and highlight the specific company experience card
      const experienceCards = document.querySelectorAll('#experience .bg-white');
      const companyNames: Record<string, string> = {
        'fraunhofer-iee': 'Fraunhofer IEE',
        'greenable': 'Greenable GmbH',
        'brac-it': 'Brac IT',
        'porsche-informatik': 'Porsche Informatik'
      };

      // Company-specific highlight colors
      const highlightColors: Record<string, { color: string, rgba: string }> = {
        'fraunhofer-iee': { color: '#619E7E', rgba: '97, 158, 126' },
        'greenable': { color: '#56863F', rgba: '86, 134, 63' },
        'brac-it': { color: '#0A2D59', rgba: '10, 45, 89' },
        'porsche-informatik': { color: '#094882', rgba: '9, 72, 130' }
      };

      experienceCards.forEach(card => {
        // Look for the company name in the h3 element
        const companyElement = card.querySelector('h3');
        if (companyElement && companyElement.textContent?.trim() === companyNames[companyId]) {
          const highlightColor = highlightColors[companyId];
          const htmlCard = card as HTMLElement;
          
          // Apply company-specific highlight styling with !important to override
          htmlCard.style.cssText += `
            box-shadow: 0 0 0 4px rgba(${highlightColor.rgba}, 0.4), 0 0 25px rgba(${highlightColor.rgba}, 0.3), 0 15px 35px rgba(${highlightColor.rgba}, 0.15) !important;
            border-color: ${highlightColor.color} !important;
            transform: scale(1.03) !important;
            transition: all 0.3s ease !important;
          `;
          
          // Scroll the specific card into view for better positioning
          setTimeout(() => {
            card.scrollIntoView({ 
              behavior: 'smooth',
              block: 'center'
            });
          }, 200);
          
          // Remove highlight after 4 seconds
          setTimeout(() => {
            htmlCard.style.removeProperty('box-shadow');
            htmlCard.style.removeProperty('border-color');
            htmlCard.style.removeProperty('transform');
            htmlCard.style.removeProperty('transition');
          }, 4000);
        }
      });
    }, 800);
  }

  // Make function globally available
  (window as any).scrollToExperience = scrollToExperience;
</script>

