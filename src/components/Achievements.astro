---
import { siteConfig } from "../config";

const hasAchievements = siteConfig.achievements && siteConfig.achievements.length > 0;

// Very light color variants for each card
const cardColors = [
  'bg-gradient-to-br from-blue-50 to-blue-50 border-blue-100',
  'bg-gradient-to-br from-emerald-50 to-emerald-50 border-emerald-100', 
  'bg-gradient-to-br from-violet-50 to-violet-50 border-violet-100',
  'bg-gradient-to-br from-amber-50 to-amber-50 border-amber-100'
];

// Function to highlight key words
function highlightKeyWords(text: string): string {
  const keyWords = [
    { word: '2nd Position', color: 'text-blue-600 font-bold' },
    { word: 'Best Team', color: 'text-emerald-600 font-bold' },
    { word: 'Porsche Informatik', color: 'text-violet-600 font-bold' },
    { word: 'HackerRank', color: 'text-amber-600 font-bold' }
  ];

  let highlightedText = text;
  keyWords.forEach(({ word, color }) => {
    const regex = new RegExp(`(${word})`, 'gi');
    highlightedText = highlightedText.replace(regex, `<span class="${color}">$1</span>`);
  });

  return highlightedText;
}
---

{
  hasAchievements && (
    <section id="achievements" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Awards
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {siteConfig.achievements.map((achievement, index) => (
                <div class={`${cardColors[index % cardColors.length]} rounded-xl shadow-lg p-6 hover:shadow-xl hover:scale-105 transition-all duration-300`}>
                  
                  {/* Award Content */}
                  <p class="text-gray-700 text-sm sm:text-base leading-relaxed font-medium" set:html={highlightKeyWords(achievement)}>
                  </p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}